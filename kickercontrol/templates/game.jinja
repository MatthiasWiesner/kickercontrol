{% extends 'layout.jinja' %}
{% from 'macros.jinja' import with_errors %}

{% block title %}New Game Page{% endblock %}
{% block content %}
<form class=form-horizontal action="{{ url_for('game', next=request.args.get('next')) }}" method=post>
  {{ form.hidden_tag() }}
  {{ with_errors(form.teamBlack_result, placeholder='0') }}
  {{ with_errors(form.teamRed_result, placeholder='0') }}
  <div class=control-group>
    <label class="control-label">Team player</label>
    <div id="player_field" class=controls>  
      <ul id="player">
      {% for user in users %}
        <li data-player-id="{{ user[0] }}">{{ user[1] }}</li>
      {% endfor %}
      </ul>
	  <ul id="spielfeld">
	  	<li data-team-role="teamBlack_backend" class="black back placeholder">BACK</li>
	  	<li data-team-role="teamRed_frontend" class="red front placeholder">FRONT</li>
	  	<li data-team-role="teamBlack_frontend" class="black front placeholder">FRONT</li>
	  	<li data-team-role="teamRed_backend" class="red back placeholder">BACK</li>
	  </ul>
    </div>
  </div>
  <div class=control-group>
    <div class=controls>
      <button type=submit class="btn btn-primary">New</button>
    </div>
  </div>
</form>

{% endblock %}
